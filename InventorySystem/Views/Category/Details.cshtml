@model InventorySystem.Core.DTOs.CategoryDto

@{
    ViewData["Title"] = "Category Details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0 text-primary">
            <i class="bi bi-info-circle me-2"></i>Category Details
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary shadow-sm">
            <i class="bi bi-arrow-left me-1"></i> Back to List
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-semibold">Category ID</label>
                    <p class="form-control-plaintext border-bottom pb-2">@Model.CategoryId</p>
                </div>
                
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-semibold">Category Name</label>
                    <p class="form-control-plaintext border-bottom pb-2">@Model.Name</p>
                </div>
                
                <div class="col-12 mb-3">
                    <label class="form-label fw-semibold">Description</label>
                    <p class="form-control-plaintext border-bottom pb-2">
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            @Model.Description
                        }
                        else
                        {
                            <span class="text-muted">No description provided</span>
                        }
                    </p>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-4">
                <div class="btn-group" role="group">
                    <a asp-action="Edit" asp-route-id="@Model.CategoryId" class="btn btn-warning shadow-sm">
                        <i class="bi bi-pencil me-1"></i>Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.CategoryId" class="btn btn-danger shadow-sm">
                        <i class="bi bi-trash me-1"></i>Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>