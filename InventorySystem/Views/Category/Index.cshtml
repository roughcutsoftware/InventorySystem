@model IEnumerable<InventorySystem.Core.DTOs.CategoryDto>

@{
    ViewData["Title"] = "Categories";
}

<div class="container py-4">
    <style>
        /* Subtle hover highlight for rows */
        .table-row-hover:hover {
            background-color: #f8f9fa;
            transition: background-color 0.2s ease-in-out;
        }

        /* Improve button spacing */
        .btn-sm i {
            font-size: 0.85rem;
        }

        /* Card style enhancements */
        .card {
            border-radius: 12px;
        }

        /* Title styling */
        h2 {
            font-size: 1.75rem;
        }
    </style>
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-semibold text-primary mb-0">
            <i class="bi bi-tags-fill me-2"></i>Categories
        </h2>
        <a asp-action="Add" class="btn btn-primary px-3">
            <i class="bi bi-plus-lg me-1"></i> Add New Category
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm">
            No categories found. Click <strong>Add New Category</strong> to create one.
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th scope="col" class="text-secondary text-uppercase small fw-bold">Name</th>
                            <th scope="col" class="text-secondary text-uppercase small fw-bold">Description</th>
                            <th scope="col" class="text-secondary text-uppercase small fw-bold text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="table-row-hover">
                                <td class="fw-medium">@item.Name</td>
                                <td class="text-muted">@item.Description</td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-outline-info btn-sm me-1">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-outline-warning btn-sm me-1">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
}
