@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Access Denied";
}

<div class="access-denied-container">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white text-center">
            <h4 class="mb-0">
                <i class="fas fa-exclamation-triangle me-2"></i>Access Denied
            </h4>
        </div>
        <div class="card-body text-center">
            <i class="fas fa-lock fa-3x text-danger mb-3"></i>
            <h5 class="card-title">Permission Required</h5>
            <p class="card-text">You don't have the necessary permissions to access this page.</p>

            <div class="d-grid gap-2">
                <a asp-controller="Home" asp-action="Dashboard" class="btn btn-primary">
                    <i class="fas fa-arrow-left me-2"></i>Return to Dashboard
                </a>
                <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-danger">
                    <i class="fas fa-user-lock me-2"></i>Switch Account
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .access-denied-container {
        max-width: 400px;
        margin: 0 auto;
    }
</style>

