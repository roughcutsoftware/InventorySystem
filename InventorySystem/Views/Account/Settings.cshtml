@model SettingsViewModel

@{
    ViewData["Title"] = "Account Settings";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0 text-primary">
            <i class="bi bi-gear me-2"></i>Account Settings
        </h2>
        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary shadow-sm">
            <i class="bi bi-arrow-left me-1"></i> Back to Dashboard
        </a>
    </div>

    @if (TempData["SettingsSuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["SettingsSuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Show validation summary for password errors -->
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

    <!-- Single Form for ALL settings -->
    <form asp-action="Settings" method="post">
        @Html.AntiForgeryToken()

        <div class="row">
            <!-- Password Settings -->
            <div class="col-lg-6">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-light">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-shield-lock me-2"></i>Change Password
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="CurrentPassword" class="form-label fw-semibold">Current Password</label>
                            <input asp-for="CurrentPassword" class="form-control" type="password"
                                   placeholder="Enter current password">
                            <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label fw-semibold">New Password</label>
                            <input asp-for="NewPassword" class="form-control" type="password"
                                   placeholder="Enter new password">
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label fw-semibold">Confirm New Password</label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password"
                                   placeholder="Confirm new password">
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Notification Settings -->
            <div class="col-lg-6">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-light">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-bell me-2"></i>Notification Preferences
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="form-check form-switch mb-3">
                            <input asp-for="EmailNotifications" class="form-check-input" role="switch">
                            <label asp-for="EmailNotifications" class="form-check-label fw-semibold">
                                Email Notifications
                            </label>
                        </div>

                        <div class="form-check form-switch mb-3">
                            <input asp-for="SmsNotifications" class="form-check-input" role="switch">
                            <label asp-for="SmsNotifications" class="form-check-label fw-semibold">
                                SMS Notifications
                            </label>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Language" class="form-label fw-semibold">Language</label>
                            <select asp-for="Language" class="form-select">
                                <option value="English">English</option>
                                <option value="Spanish">Spanish</option>
                                <option value="French">French</option>
                                <option value="German">German</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TimeZone" class="form-label fw-semibold">Time Zone</label>
                            <select asp-for="TimeZone" class="form-select">
                                <option value="UTC">UTC</option>
                                <option value="EST">Eastern Time (EST)</option>
                                <option value="PST">Pacific Time (PST)</option>
                                <option value="CST">Central Time (CST)</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Single Submit Button for ALL settings -->
        <div class="d-flex justify-content-end mt-4">
            <button type="submit" class="btn btn-primary shadow-sm">
                <i class="bi bi-check-circle me-1"></i>Save All Settings
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}