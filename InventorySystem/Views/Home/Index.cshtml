@{
    ViewData["Title"] = "Dashboard";
}

<div class="page-header">
    <h1><i class="fas fa-tachometer-alt me-2"></i>Dashboard</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">Dashboard</li>
        </ol>
    </nav>
</div>

<!-- Quick Actions -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <a asp-controller="Product" asp-action="Index" class="card text-decoration-none">
            <div class="card-body text-center">
                <i class="fas fa-box fa-3x text-primary mb-3"></i>
                <h5 class="card-title">Products</h5>
                <p class="text-muted">Manage inventory</p>
            </div>
        </a>
    </div>

    <div class="col-md-3 mb-3">
        <a asp-controller="Sales" asp-action="Index" class="card text-decoration-none">
            <div class="card-body text-center">
                <i class="fas fa-cash-register fa-3x text-success mb-3"></i>
                <h5 class="card-title">Sales</h5>
                <p class="text-muted">Process sales</p>
            </div>
        </a>
    </div>

    <div class="col-md-3 mb-3">
        <a asp-controller="Customer" asp-action="Index" class="card text-decoration-none">
            <div class="card-body text-center">
                <i class="fas fa-users fa-3x text-info mb-3"></i>
                <h5 class="card-title">Customers</h5>
                <p class="text-muted">Manage customers</p>
            </div>
        </a>
    </div>

    <div class="col-md-3 mb-3">
        <a asp-controller="Reports" asp-action="SalesReport" class="card text-decoration-none">
            <div class="card-body text-center">
                <i class="fas fa-chart-bar fa-3x text-secondary mb-3"></i>
                <h5 class="card-title">Reports</h5>
                <p class="text-muted">View analytics</p>
            </div>
        </a>
    </div>
</div>

<!-- Admin Section -->
@if (User.IsInRole("Admin"))
{
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Admin Tools</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <a asp-controller="Supplier" asp-action="Index" class="btn btn-outline-primary w-100">
                                <i class="fas fa-truck me-2"></i>Suppliers
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a asp-controller="Purchase" asp-action="Index" class="btn btn-outline-success w-100">
                                <i class="fas fa-shopping-cart me-2"></i>Purchases
                            </a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-info w-100">
                                <i class="fas fa-user-cog me-2"></i>Users
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}