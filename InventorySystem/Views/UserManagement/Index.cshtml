@model IEnumerable<IdentityUser>
@{
    ViewData["Title"] = "Users";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            <i class="fas fa-users"></i> User Management
        </h2>
        <a asp-controller="Account" asp-action="Register" class="btn btn-primary shadow-sm">
            <i class="fas fa-user-plus me-1"></i> New User
        </a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <table class="table align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width:5%;">#</th>
                        <th>Email</th>
                        <th>User Name</th>
                        <th style="width:20%;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        int count = 1;
                        foreach (var user in Model)
                        {
                            <tr>
                                <td>@count</td>
                                <td class="fw-semibold">@user.Email</td>
                                <td>@user.UserName</td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-info text-white shadow-sm">
                                            <i class="fas fa-eye"></i>
                                        </a>

                                        <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="delete-form">
                                            <button type="button" class="btn btn-sm btn-danger shadow-sm delete-btn">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            count++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-4">
                                No users found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // 🧩 Sweet confirmation popup before delete
        document.querySelectorAll('.delete-btn').forEach(button => {
            button.addEventListener('click', function (e) {
                const form = this.closest('form');

                Swal.fire({
                    title: 'Are you sure?',
                    text: "This action cannot be undone!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: 'red',
                    cancelButtonColor: '#6c757d',
                    confirmButtonText: 'Yes, delete it!',
                    cancelButtonText: 'Cancel',
                    customClass: {
                        popup: 'shadow rounded-4 p-3',
                        title: 'fw-bold text-dark',
                        confirmButton: 'btn btn-danger fw-semibold px-3 py-2 me-2',
                        cancelButton: 'btn btn-secondary fw-semibold px-3 py-2'
                    }
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit();
                    }
                });
            });
        });

        // ✅ Toast Notification Function
        const Toast = Swal.mixin({
            toast: true,
            position: 'bottom-end',
            showConfirmButton: false,
            timer: 2000,
            timerProgressBar: true,
            background: '#fff',
            iconColor: 'red'
        });

        @if (TempData["AdminErrorMessage"] != null)
        {
                <text>
                    Toast.fire({
                        icon: 'error',
                        title: '@TempData["AdminErrorMessage"]'
                    });
                </text>
        }

        @if (TempData["UserErrorMessage"] != null)
        {
                <text>
                    Toast.fire({
                        icon: 'error',
                        title: '@TempData["UserErrorMessage"]'
                    });
                </text>
        }
    </script>
}
