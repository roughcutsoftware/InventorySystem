@model InventorySystem.Core.DTOs.ProductDto

@{
    ViewData["Title"] = "Delete Product";
}

<h2 class="text-danger mb-4">Delete Product</h2>

<div class="alert alert-warning">
    <h5>Are you sure you want to delete this product?</h5>
    <p>This action cannot be undone.</p>
</div>

<div class="card shadow-sm p-4 mb-3">
    <dl class="row">

        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Quantity In Stock</dt>
        <dd class="col-sm-9">@Model.QuantityInStock</dd>

        <dt class="col-sm-3">Unit Price</dt>
        <dd class="col-sm-9">@Model.UnitPrice.ToString("C")</dd>

        <dt class="col-sm-3">Cost Price</dt>
        <dd class="col-sm-9">@Model.CostPrice.ToString("C")</dd>

        <dt class="col-sm-3">Reorder Level</dt>
        <dd class="col-sm-9">@Model.ReorderLevel</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@(Model.IsActive == true ? "Active" : "Inactive")</dd>

        <dt class="col-sm-3">Category ID</dt>
        <dd class="col-sm-9">@Model.CategoryId</dd>

        <dt class="col-sm-3">Supplier ID</dt>
        <dd class="col-sm-9">@Model.SupplierId</dd>

        <dt class="col-sm-3">Created At</dt>
        <dd class="col-sm-9">@Model.CreatedAt.ToString("g")</dd>
    </dl>
</div>

<form asp-action="DeleteProduct" method="post">
    <input type="hidden" asp-for="ProductId" />
    <div class="text-end">
        <button type="submit" class="btn btn-danger px-4 me-2">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
