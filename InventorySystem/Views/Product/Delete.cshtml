@model InventorySystem.Core.DTOs.ProductDto

@{
    ViewData["Title"] = "Delete Product";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0 text-danger">
            <i class="bi bi-trash me-2"></i>Delete Product
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary shadow-sm">
            <i class="bi bi-arrow-left me-1"></i> Back to List
        </a>
    </div>

    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <h5 class="card-title mb-0">
                <i class="bi bi-exclamation-triangle me-2"></i>Confirm Deletion
            </h5>
        </div>
        <div class="card-body">
            <div class="alert alert-warning border-warning">
                <i class="bi bi-exclamation-triangle me-2"></i>
                <strong>Warning:</strong> You are about to delete this product. This action cannot be undone.
            </div>

            <div class="mb-4">
                <h6 class="fw-semibold">Product Details:</h6>
                <div class="table-responsive">
                    <table class="table table-sm">
                        <tr>
                            <td class="fw-semibold">ID:</td>
                            <td>@Model.ProductId</td>
                        </tr>
                        <tr>
                            <td class="fw-semibold">Name:</td>
                            <td>@Model.Name</td>
                        </tr>
                        <tr>
                            <td class="fw-semibold">Stock Quantity:</td>
                            <td>
                                @if (Model.QuantityInStock <= 0)
                                {
                                    <span class="badge bg-danger">@Model.QuantityInStock (Out of Stock)</span>
                                }
                                else if (Model.ReorderLevel.HasValue && Model.QuantityInStock <= Model.ReorderLevel.Value)
                                {
                                    <span class="badge bg-warning text-dark">@Model.QuantityInStock (Low Stock)</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">@Model.QuantityInStock</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td class="fw-semibold">Unit Price:</td>
                            <td>@Model.UnitPrice.ToString("C")</td>
                        </tr>
                        <tr>
                            <td class="fw-semibold">Cost Price:</td>
                            <td>@Model.CostPrice.ToString("C")</td>
                        </tr>
                        <tr>
                            <td class="fw-semibold">Reorder Level:</td>
                            <td>@(Model.ReorderLevel?.ToString() ?? "Not set")</td>
                        </tr>
                        <tr>
                            <td class="fw-semibold">Status:</td>
                            <td>
                                @if (Model.IsActive == true)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td class="fw-semibold">Category:</td>
                            <td>@Model.CategoryName</td>
                        </tr>
                        <tr>
                            <td class="fw-semibold">Supplier:</td>
                            <td>@Model.SupplierName</td>
                        </tr>
                        <tr>
                            <td class="fw-semibold">Creation Date:</td>
                            <td>@Model.CreatedAt.ToString("yyyy-MM-dd")</td>
                        </tr>
                    </table>
                </div>
            </div>

            <form asp-action="DeleteProduct" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ProductId" />

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-danger shadow-sm">
                        <i class="bi bi-trash me-1"></i>Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>