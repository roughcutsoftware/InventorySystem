@model InventorySystem.Core.DTOs.ProductDto

@{
    ViewData["Title"] = "Product Details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0 text-primary">
            <i class="bi bi-info-circle me-2"></i>Product Details
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary shadow-sm">
            <i class="bi bi-arrow-left me-1"></i> Back to List
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">
                <i class="bi bi-box me-2"></i>Product Information
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-semibold">Product ID</label>
                    <p class="form-control-plaintext border-bottom pb-2">@Model.ProductId</p>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label fw-semibold">Product Name</label>
                    <p class="form-control-plaintext border-bottom pb-2">@Model.Name</p>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label fw-semibold">Quantity In Stock</label>
                    <p class="form-control-plaintext border-bottom pb-2">
                        @if (Model.QuantityInStock <= 0)
                        {
                            <span class="badge bg-danger">
                                <i class="bi bi-x-circle me-1"></i> @Model.QuantityInStock (Out of Stock)
                            </span>
                        }
                        else if (Model.ReorderLevel.HasValue && Model.QuantityInStock <= Model.ReorderLevel.Value)
                        {
                            <span class="badge bg-warning text-dark">
                                <i class="bi bi-exclamation-triangle me-1"></i> @Model.QuantityInStock (Low Stock)
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-success">
                                <i class="bi bi-check-circle me-1"></i> @Model.QuantityInStock
                            </span>
                        }
                    </p>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label fw-semibold">Unit Price</label>
                    <p class="form-control-plaintext border-bottom pb-2 fw-semibold text-success">
                        @Model.UnitPrice.ToString("C")
                    </p>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label fw-semibold">Cost Price</label>
                    <p class="form-control-plaintext border-bottom pb-2">@Model.CostPrice.ToString("C")</p>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label fw-semibold">Reorder Level</label>
                    <p class="form-control-plaintext border-bottom pb-2">
                        @(Model.ReorderLevel?.ToString() ?? "Not set")
                    </p>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label fw-semibold">Status</label>
                    <p class="form-control-plaintext border-bottom pb-2">
                        @if (Model.IsActive == true)
                        {
                            <span class="badge bg-success">
                                <i class="bi bi-check-circle me-1"></i> Active
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">
                                <i class="bi bi-pause-circle me-1"></i> Inactive
                            </span>
                        }
                    </p>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label fw-semibold">Creation Date</label>
                    <p class="form-control-plaintext border-bottom pb-2">@Model.CreatedAt.ToString("yyyy-MM-dd")</p>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label fw-semibold">Category</label>
                    <p class="form-control-plaintext border-bottom pb-2">@Model.CategoryName</p>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label fw-semibold">Supplier</label>
                    <p class="form-control-plaintext border-bottom pb-2">@Model.SupplierName</p>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-4">
                <div class="btn-group" role="group">
                    <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-warning shadow-sm">
                        <i class="bi bi-pencil me-1"></i>Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.ProductId" class="btn btn-danger shadow-sm">
                        <i class="bi bi-trash me-1"></i>Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>