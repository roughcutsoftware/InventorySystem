@model IEnumerable<InventorySystem.Core.DTOs.ProductDto>

@{
    ViewData["Title"] = "Products";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0">Product List</h2>
        <a asp-action="Add" class="btn btn-primary btn-sm">
            <i class="bi bi-plus-circle me-1"></i> Add New Product
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col" class="text-center">Details</th>
                        <th scope="col" class="text-center">Edit</th>
                        <th scope="col" class="text-center">Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ProductId</td>
                                <td>@item.Name</td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-sm btn-info px-3">
                                        <i class="bi bi-info-circle me-1"></i> Details
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-sm btn-warning px-3">
                                        <i class="bi bi-pencil-square me-1"></i> Edit
                                    </a>
                                </td>
                                <td class="text-center">
                                    <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-sm btn-danger px-3">
                                        <i class="bi bi-trash me-1"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-3">No products found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: #f1f3f5;
    }

    .btn-sm {
        font-size: 0.85rem;
    }

    .card {
        border-radius: 12px;
        overflow: hidden;
    }

    h2 {
        font-size: 1.8rem;
    }
</style>
