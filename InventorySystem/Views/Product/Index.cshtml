@model IEnumerable<InventorySystem.Core.DTOs.ProductDto>

@{
    ViewData["Title"] = "Products";
}

<h2 class="mb-3">Product List</h2>

<p>
    <a asp-action="Add" class="btn btn-primary">Add New Product</a>
</p>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Product Details</th>
            <th>Edit Product</th>
            <th>Delete Product</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.Name</td>
                    <td class="text-center">
                        <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-sm btn-info me-3">Details</a>
                    </td>
                    <td class ="text-center">
                        <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-sm btn-warning me-3">Edit</a>
                    </td>
                    <td class="text-center">
                        <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="10" class="text-center text-muted">No products found.</td>
            </tr>
        }
    </tbody>
</table>
