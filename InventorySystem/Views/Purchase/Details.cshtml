@model InventorySystem.Core.DTOs.PurchaseOrderDto

@{
    ViewData["Title"] = "Purchase Details";
}

<h2>Purchase Order #@Model.PurchaseId</h2>
<hr />

<div class="card mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Purchase Date</dt>
            <dd class="col-sm-9">@Model.PurchaseDate.ToString("yyyy-MM-dd HH:mm")</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                <span class="badge bg-@(Model.Status == "Pending" ? "warning" : Model.Status == "Cancelled" ? "danger" : "success")">
                    @Model.Status
                </span>
            </dd>

            <dt class="col-sm-3">Supplier</dt>
            <dd class="col-sm-9">@Model.SupplierName</dd>

            <dt class="col-sm-3">Created By</dt>
            <dd class="col-sm-9">@Model.CreatedByName</dd>

            <dt class="col-sm-3">Total Amount</dt>
            <dd class="col-sm-9 text-success fw-bold">@Model.TotalAmount.ToString("C")</dd>
        </dl>
    </div>
</div>

<h4>Purchase Details</h4>

<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Unit Cost</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.PurchaseDetails != null && Model.PurchaseDetails.Any())
        {
            foreach (var item in Model.PurchaseDetails)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitCost.ToString("C")</td>
                    <td>@item.subTotal.ToString("C")</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted">No purchase details available.</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
@if (Model.Status == "Pending")
{
    <form asp-action="Receive" asp-route-id="@Model.PurchaseId" method="post" class="d-inline">
        <button type="submit" class="btn btn-success">Receive</button>
    </form>
    <form asp-action="Cancel" asp-route-id="@Model.PurchaseId" method="post" class="d-inline">
        <button type="submit" class="btn btn-danger">Cancel</button>
    </form>
}
