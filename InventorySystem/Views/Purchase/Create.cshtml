@model InventorySystem.Core.DTOs.PurchaseOrderDto

<h2>Create Purchase Order</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label>Supplier ID</label>
        <input asp-for="SupplierId" class="form-control" />
    </div>

    <h4>Purchase Details</h4>
    <table class="table">
        <thead>
            <tr><th>Product ID</th><th>Quantity</th><th>Unit Cost</th></tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.PurchaseDetails.Count; i++)
            {
                <tr>
                    <td><input asp-for="@Model.PurchaseDetails[i].ProductId" class="form-control" /></td>
                    <td><input asp-for="@Model.PurchaseDetails[i].Quantity" class="form-control" /></td>
                    <td><input asp-for="@Model.PurchaseDetails[i].UnitCost" class="form-control" /></td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-success">Create</button>
</form>
