@model IEnumerable<InventorySystem.Core.DTOs.PurchaseOrderDto>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary"><i class="bi bi-cart4 me-2"></i>Purchases</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i> Create New Purchase
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Total</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var p in Model)
                        {
                            <tr>
                                <td>@p.PurchaseId</td>
                                <td>@p.PurchaseDate.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    @switch (p.Status?.ToLower())
                                    {
                                        case "pending":
                                            <span class="badge bg-warning text-dark">Pending</span>
                                            break;
                                        case "received":
                                            <span class="badge bg-success">Received</span>
                                            break;
                                        case "cancelled":
                                            <span class="badge bg-danger">Cancelled</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@p.Status</span>
                                            break;
                                    }
                                </td>
                                <td>@p.TotalAmount.ToString("C")</td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@p.PurchaseId" class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i> Details
                                    </a>

                                    @if (p.Status == "Pending")
                                    {
                                        <form asp-action="Receive" asp-route-id="@p.PurchaseId" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-success"
                                                    onclick="return confirm('Mark this purchase as received?');">
                                                <i class="bi bi-box-seam"></i> Receive
                                            </button>
                                        </form>
                                        <form asp-action="Cancel" asp-route-id="@p.PurchaseId" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-danger"
                                                    onclick="return confirm('Cancel this purchase?');">
                                                <i class="bi bi-x-circle"></i> Cancel
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-3">
                                <i class="bi bi-info-circle me-1"></i> No purchase orders found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
