@{
    ViewData["Title"] = "Generate Reports";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">📑 Generate Reports</h2>

    <div class="row text-center">
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <i class="bi bi-receipt fs-1 text-primary"></i>
                    <h5 class="mt-3">Sales Report</h5>
                    <p class="text-muted">View sales invoices within a date range.</p>
                    <a asp-controller="Reports" asp-action="SalesReport" class="btn btn-primary w-100">Generate</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <i class="bi bi-cart-check fs-1 text-success"></i>
                    <h5 class="mt-3">Purchase Report</h5>
                    <p class="text-muted">Analyze purchases between selected dates.</p>
                    <a asp-controller="Reports" asp-action="PurchaseReport" class="btn btn-success w-100">Generate</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <i class="bi bi-box-seam fs-1 text-warning"></i>
                    <h5 class="mt-3">Inventory Valuation Report</h5>
                    <p class="text-muted">View current inventory valuation summary.</p>
                    <a asp-controller="Reports" asp-action="InventoryValuationReport" class="btn btn-warning w-100 text-white">Generate</a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="mt-4 text-center">
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
        ← Back to Home
    </a>
</div>