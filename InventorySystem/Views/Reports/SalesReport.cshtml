@model InventorySystem.Web.View_Models.ReportViewModel

@{
    ViewData["Title"] = "Sales Report";
}

<div class="page-header">
    <h1><i class="fas fa-file-invoice-dollar me-2"></i>Sales Report</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item">Reports</li>
            <li class="breadcrumb-item active">Sales Report</li>
        </ol>
    </nav>
</div>

<!-- Filter Card -->
<div class="card">
    <div class="card-header">
        <i class="fas fa-filter me-2"></i>Filter Sales Data
    </div>
    <div class="card-body">
        <form asp-action="SalesReportData" method="post">
            <div class="row">
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="DateFrom" class="form-label"></label>
                        <input asp-for="DateFrom" class="form-control" type="date" />
                        <span asp-validation-for="DateFrom" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="DateTo" class="form-label"></label>
                        <input asp-for="DateTo" class="form-control" type="date" />
                        <span asp-validation-for="DateTo" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="mb-3">
                        <label class="form-label">&nbsp;</label>
                        <button type="submit" class="btn btn-primary d-block w-100">
                            <i class="fas fa-search me-2"></i>Generate Report
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@if (Model?.Sales != null && Model.Sales.Any())
{
    <!-- Report Card -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span><i class="fas fa-table me-2"></i>Sales Report Results</span>
            <form asp-action="ExportSalesReport" method="post" class="d-inline">
                <input type="hidden" asp-for="DateFrom" />
                <input type="hidden" asp-for="DateTo" />
                <button type="submit" class="btn btn-danger btn-sm">
                    <i class="fas fa-file-pdf me-2"></i>Export as PDF
                </button>
            </form>
        </div>
        <div class="card-body">
            <!-- Summary Cards -->
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-0">Total Sales</h6>
                                    <h3 class="mb-0">@Model.Sales.Count</h3>
                                </div>
                                <i class="fas fa-shopping-cart fa-3x opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-0">Total Revenue</h6>
                                    <h3 class="mb-0">@Model.Sales.Sum(s => s.Subtotal).ToString("C")</h3>
                                </div>
                                <i class="fas fa-dollar-sign fa-3x opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-0">Total Items Sold</h6>
                                    <h3 class="mb-0">@Model.Sales.Sum(s => s.Quantity)</h3>
                                </div>
                                <i class="fas fa-boxes fa-3x opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Data Table -->
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="salesTable">
                    <thead class="table-dark">
                        <tr>
                            <th>Date</th>
                            <th>Customer</th>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Unit Price</th>
                            <th>Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var sale in Model.Sales)
                        {
                            <tr>
                                <td>@sale.SaleDate.ToString("yyyy-MM-dd")</td>
                                <td>@sale.CustomerName</td>
                                <td>@sale.ProductName</td>
                                <td>@sale.Quantity</td>
                                <td>@sale.UnitPrice.ToString("C")</td>
                                <td>@sale.Subtotal.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-dark">
                        <tr>
                            <th colspan="5" class="text-end">Grand Total:</th>
                            <th>@Model.Sales.Sum(s => s.Subtotal).ToString("C")</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
}
else if (Model?.Sales != null)
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
            <h5 class="text-muted">No sales found for the selected date range</h5>
            <p class="text-muted">Try selecting a different date range</p>
        </div>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Initialize DataTable
            $('#salesTable').DataTable({
                "pageLength": 25,
                "order": [[0, "desc"]],
                "language": {
                    "search": "Search records:",
                    "lengthMenu": "Show _MENU_ records per page"
                },
                "dom": '<"row"<"col-sm-6"l><"col-sm-6"f>>rtip'
            });

            // Set default dates (last 30 days)
            var today = new Date();
            var lastMonth = new Date();
            lastMonth.setDate(today.getDate() - 30);

            if (!$('#DateFrom').val()) {
                $('#DateFrom').val(lastMonth.toISOString().split('T')[0]);
            }
            if (!$('#DateTo').val()) {
                $('#DateTo').val(today.toISOString().split('T')[0]);
            }
        });
    </script>
}