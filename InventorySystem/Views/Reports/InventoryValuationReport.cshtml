@model ReportViewModel

@{
    ViewData["Title"] = "Inventory Valuation Report";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">📊 Generate Purchase Report</h2>

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <form asp-controller="Reports" asp-action="InventoryValuationReport" method="post" class="border p-4 shadow-sm rounded bg-light">
        <div class="form-group mb-3">
            <label asp-for="DateFrom" class="form-label fw-bold">From:</label>
            <input asp-for="DateFrom" type="date" class="form-control" required />
            <span asp-validation-for="DateFrom" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="DateTo" class="form-label fw-bold">To:</label>
            <input asp-for="DateTo" type="date" class="form-control" required />
            <span asp-validation-for="DateTo" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">
            <i class="bi bi-file-earmark-pdf"></i> Generate Report
        </button>
    </form>

    <div class="mt-4 text-center">
        <a asp-controller="Reports" asp-action="GenerateReport" class="btn btn-outline-secondary">
            ← Generate Another Report
        </a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
            ← Back to Home
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
