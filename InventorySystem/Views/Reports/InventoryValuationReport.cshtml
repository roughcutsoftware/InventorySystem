@model List<InventoryValuationDto>

@{
    ViewData["Title"] = "Inventory Valuation Report";
}

<div class="page-header">
    <h1><i class="fas fa-warehouse me-2"></i>Inventory Valuation Report</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item">Reports</li>
            <li class="breadcrumb-item active">Inventory Valuation</li>
        </ol>
    </nav>
</div>

@if (Model != null && Model.Any())
{
    <!-- Report Card -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <span><i class="fas fa-table me-2"></i>Inventory Valuation as of @DateTime.Now.ToString("yyyy-MM-dd")</span>
            <form asp-action="ExportInventoryValuationReport" method="get" class="d-inline">
                <button type="submit" class="btn btn-danger btn-sm">
                    <i class="fas fa-file-pdf me-2"></i>Export as PDF
                </button>
            </form>
        </div>
        <div class="card-body">
            <!-- Summary Cards -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-0">Total Products</h6>
                                    <h3 class="mb-0">@Model.Count</h3>
                                </div>
                                <i class="fas fa-box fa-3x opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-0">Total Inventory Value</h6>
                                    <h3 class="mb-0">@Model.Sum(i => i.TotalValue).ToString("C")</h3>
                                </div>
                                <i class="fas fa-dollar-sign fa-3x opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-0">Total Units in Stock</h6>
                                    <h3 class="mb-0">@Model.Sum(i => i.QuantityInStock)</h3>
                                </div>
                                <i class="fas fa-cubes fa-3x opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-warning text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-0">Low Stock Items</h6>
                                    <h3 class="mb-0">@Model.Count(i => i.QuantityInStock < 10)</h3>
                                </div>
                                <i class="fas fa-exclamation-triangle fa-3x opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Data Table -->
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="inventoryTable">
                    <thead class="table-dark">
                        <tr>
                            <th>Product Name</th>
                            <th>Category</th>
                            <th>Quantity in Stock</th>
                            <th>Cost Price</th>
                            <th>Total Value</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="@(item.QuantityInStock < 10 ? "table-warning" : "")">
                                <td>@item.ProductName</td>
                                <td>@item.CategoryName</td>
                                <td>@item.QuantityInStock</td>
                                <td>@item.CostPrice.ToString("C")</td>
                                <td>@item.TotalValue.ToString("C")</td>
                                <td>
                                    @if (item.QuantityInStock == 0)
                                    {
                                        <span class="badge bg-danger">Out of Stock</span>
                                    }
                                    else if (item.QuantityInStock < 10)
                                    {
                                        <span class="badge bg-warning text-dark">Low Stock</span>
                                    }
                                    else if (item.QuantityInStock < 50)
                                    {
                                        <span class="badge bg-info">Normal</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">In Stock</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-dark">
                        <tr>
                            <th colspan="4" class="text-end">Grand Total Value:</th>
                            <th colspan="2">@Model.Sum(i => i.TotalValue).ToString("C")</th>
                        </tr>
                    </tfoot>
                </table>
            </div>

            <!-- Chart Section -->
            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <i class="fas fa-chart-pie me-2"></i>Inventory Value by Category
                        </div>
                        <div class="card-body">
                            <canvas id="categoryChart"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <i class="fas fa-chart-bar me-2"></i>Stock Quantity by Category
                        </div>
                        <div class="card-body">
                            <canvas id="stockChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
            <h5 class="text-muted">No inventory data available</h5>
            <p class="text-muted">Add products to view inventory valuation</p>
        </div>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable
            $('#inventoryTable').DataTable({
                "pageLength": 25,
                "order": [[4, "desc"]],
                "language": {
                    "search": "Search products:",
                    "lengthMenu": "Show _MENU_ products per page"
                },
                "dom": '<"row"<"col-sm-6"l><"col-sm-6"f>>rtip'
            });

            @if (Model != null && Model.Any())
            {
                <text>
                // Group data by category for charts
                var categoryData = @Html.Raw(Json.Serialize(
                    Model.GroupBy(i => i.CategoryName)
                         .Select(g => new { 
                             category = g.Key, 
                             value = g.Sum(i => i.TotalValue),
                             quantity = g.Sum(i => i.QuantityInStock)
                         })
                ));

                // Category Value Chart
                var ctxCategory = document.getElementById('categoryChart').getContext('2d');
                new Chart(ctxCategory, {
                    type: 'pie',
                    data: {
                        labels: categoryData.map(d => d.category),
                        datasets: [{
                            data: categoryData.map(d => d.value),
                            backgroundColor: [
                                '#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', 
                                '#e74a3b', '#858796', '#5a5c69', '#2e59d9'
                            ]
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        plugins: {
                            legend: {
                                position: 'bottom'
                            }
                        }
                    }
                });

                // Stock Quantity Chart
                var ctxStock = document.getElementById('stockChart').getContext('2d');
                new Chart(ctxStock, {
                    type: 'bar',
                    data: {
                        labels: categoryData.map(d => d.category),
                        datasets: [{
                            label: 'Quantity in Stock',
                            data: categoryData.map(d => d.quantity),
                            backgroundColor: '#4e73df'
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: true,
                        plugins: {
                            legend: {
                                display: false
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });
                </text>
            }
        });
    </script>
}