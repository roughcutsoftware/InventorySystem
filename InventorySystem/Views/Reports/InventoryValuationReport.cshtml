@model List<InventoryValuationDto>

@{
    ViewData["Title"] = "Inventory Valuation Report";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0 text-primary">
            <i class="bi bi-clipboard-data me-2"></i>Inventory Valuation Report
        </h2>
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary shadow-sm">
            <i class="bi bi-arrow-left me-1"></i> Back to Dashboard
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <!-- Report Card -->
        <div class="card shadow-sm border-0">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="bi bi-table me-2"></i>Inventory Valuation as of @DateTime.Now.ToString("yyyy-MM-dd")
                </h5>
                <form asp-action="ExportInventoryValuationReport" method="get" class="d-inline">
                    <button type="submit" class="btn btn-danger btn-sm shadow-sm">
                        <i class="bi bi-file-pdf me-1"></i>Export PDF
                    </button>
                </form>
            </div>
            <div class="card-body">
                <!-- Summary Cards -->
                <div class="row mb-4">
                    <div class="col-md-3 mb-3">
                        <div class="card bg-primary text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-0">Total Products</h6>
                                        <h3 class="mb-0">@Model.Count</h3>
                                    </div>
                                    <i class="bi bi-box fa-2x opacity-50"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card bg-success text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-0">Total Value</h6>
                                        <h3 class="mb-0">@Model.Sum(i => i.TotalValue).ToString("C")</h3>
                                    </div>
                                    <i class="bi bi-currency-dollar fa-2x opacity-50"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card bg-info text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-0">Units in Stock</h6>
                                        <h3 class="mb-0">@Model.Sum(i => i.QuantityInStock)</h3>
                                    </div>
                                    <i class="bi bi-boxes fa-2x opacity-50"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 mb-3">
                        <div class="card bg-warning text-white">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-0">Low Stock Items</h6>
                                        <h3 class="mb-0">@Model.Count(i => i.QuantityInStock < 10)</h3>
                                    </div>
                                    <i class="bi bi-exclamation-triangle fa-2x opacity-50"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Data Table -->
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0" id="inventoryTable">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">Product Name</th>
                                <th scope="col">Category</th>
                                <th scope="col" class="text-center">Quantity</th>
                                <th scope="col" class="text-end">Cost Price</th>
                                <th scope="col" class="text-end">Total Value</th>
                                <th scope="col" class="text-center">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="@(item.QuantityInStock < 10 ? "table-warning" : "")">
                                    <td class="fw-semibold">@item.ProductName</td>
                                    <td>@item.CategoryName</td>
                                    <td class="text-center">@item.QuantityInStock</td>
                                    <td class="text-end">@item.CostPrice.ToString("C")</td>
                                    <td class="text-end fw-semibold text-success">@item.TotalValue.ToString("C")</td>
                                    <td class="text-center">
                                        @if (item.QuantityInStock == 0)
                                        {
                                            <span class="badge bg-danger px-3 py-2">
                                                <i class="bi bi-x-circle me-1"></i> Out of Stock
                                            </span>
                                        }
                                        else if (item.QuantityInStock < 10)
                                        {
                                            <span class="badge bg-warning text-dark px-3 py-2">
                                                <i class="bi bi-exclamation-triangle me-1"></i> Low Stock
                                            </span>
                                        }
                                        else if (item.QuantityInStock < 50)
                                        {
                                            <span class="badge bg-info px-3 py-2">
                                                <i class="bi bi-check-circle me-1"></i> Normal
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success px-3 py-2">
                                                <i class="bi bi-check-circle me-1"></i> In Stock
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <th colspan="4" class="text-end">Grand Total Value:</th>
                                <th class="text-end">@Model.Sum(i => i.TotalValue).ToString("C")</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>

                <!-- Chart Section -->
                <div class="row mt-4">
                    <div class="col-md-6 mb-4">
                        <div class="card shadow-sm border-0">
                            <div class="card-header bg-light">
                                <h6 class="card-title mb-0">
                                    <i class="bi bi-pie-chart me-2"></i>Inventory Value by Category
                                </h6>
                            </div>
                            <div class="card-body">
                                <canvas id="categoryChart" height="250"></canvas>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <div class="card shadow-sm border-0">
                            <div class="card-header bg-light">
                                <h6 class="card-title mb-0">
                                    <i class="bi bi-bar-chart me-2"></i>Stock Quantity by Category
                                </h6>
                            </div>
                            <div class="card-body">
                                <canvas id="stockChart" height="250"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm border-0">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox fa-4x text-muted mb-3"></i>
                <h5 class="text-muted">No inventory data available</h5>
                <p class="text-muted">Add products to view inventory valuation</p>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize DataTable
            $('#inventoryTable').DataTable({
                "pageLength": 25,
                "order": [[4, "desc"]],
                "language": {
                    "search": "Search products:",
                    "lengthMenu": "Show _MENU_ products per page"
                },
                "dom": '<"row"<"col-sm-6"l><"col-sm-6"f>>rtip'
            });

            @if (Model != null && Model.Any())
            {
                <text>
                // Group data by category for charts
                var categoryData = @Html.Raw(Json.Serialize(
                    Model.GroupBy(i => i.CategoryName)
                         .Select(g => new { 
                             category = g.Key, 
                             value = g.Sum(i => i.TotalValue),
                             quantity = g.Sum(i => i.QuantityInStock)
                         })
                ));

                // Category Value Chart
                var ctxCategory = document.getElementById('categoryChart').getContext('2d');
                new Chart(ctxCategory, {
                    type: 'pie',
                    data: {
                        labels: categoryData.map(d => d.category),
                        datasets: [{
                            data: categoryData.map(d => d.value),
                            backgroundColor: [
                                '#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', 
                                '#e74a3b', '#858796', '#5a5c69', '#2e59d9'
                            ]
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                position: 'bottom'
                            }
                        }
                    }
                });

                // Stock Quantity Chart
                var ctxStock = document.getElementById('stockChart').getContext('2d');
                new Chart(ctxStock, {
                    type: 'bar',
                    data: {
                        labels: categoryData.map(d => d.category),
                        datasets: [{
                            label: 'Quantity in Stock',
                            data: categoryData.map(d => d.quantity),
                            backgroundColor: '#4e73df'
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                display: false
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });
                </text>
            }
        });
    </script>
}