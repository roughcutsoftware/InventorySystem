@model InventorySystem.Core.DTOs.SupplierDto

@{
    ViewData["Title"] = "Delete Supplier";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0 text-danger">
            <i class="bi bi-trash me-2"></i>Delete Supplier
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary shadow-sm">
            <i class="bi bi-arrow-left me-1"></i> Back to List
        </a>
    </div>

    <div class="card border-danger shadow-sm">
        <div class="card-header bg-danger text-white">
            <h5 class="card-title mb-0">
                <i class="bi bi-exclamation-triangle me-2"></i>Confirm Deletion
            </h5>
        </div>
        <div class="card-body">
            <div class="alert alert-warning border-warning">
                <i class="bi bi-exclamation-triangle me-2"></i>
                <strong>Warning:</strong> You are about to delete supplier <strong>@Model.Name</strong>. This action cannot be undone.
            </div>

            <div class="mb-4">
                <h6 class="fw-semibold">Supplier Details:</h6>
                <div class="table-responsive">
                    <table class="table table-sm">
                        <tr>
                            <td class="fw-semibold">ID:</td>
                            <td>@Model.SupplierId</td>
                        </tr>
                        <tr>
                            <td class="fw-semibold">Name:</td>
                            <td>@Model.Name</td>
                        </tr>
                        <tr>
                            <td class="fw-semibold">Company:</td>
                            <td>
                                @if (!string.IsNullOrEmpty(Model.CompanyName))
                                {
                                    @Model.CompanyName
                                }
                                else
                                {
                                    <span class="text-muted">No company name</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td class="fw-semibold">Contact:</td>
                            <td>
                                @if (!string.IsNullOrEmpty(Model.ContactName))
                                {
                                    @Model.ContactName
                                }
                                else
                                {
                                    <span class="text-muted">No contact name</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td class="fw-semibold">Email:</td>
                            <td>
                                @if (!string.IsNullOrEmpty(Model.Email))
                                {
                                    @Model.Email
                                }
                                else
                                {
                                    <span class="text-muted">No email</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td class="fw-semibold">Phone:</td>
                            <td>
                                @if (!string.IsNullOrEmpty(Model.Phone))
                                {
                                    @Model.Phone
                                }
                                else
                                {
                                    <span class="text-muted">No phone</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td class="fw-semibold">Status:</td>
                            <td>
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="SupplierId" />

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-danger shadow-sm">
                        <i class="bi bi-trash me-1"></i>Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>