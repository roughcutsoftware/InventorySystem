@model IEnumerable<InventorySystem.Core.DTOs.SupplierDto>

@{
    ViewData["Title"] = "Suppliers";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0 text-primary">
            <i class="bi bi-truck me-2"></i>Suppliers
        </h2>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> New Supplier
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">Supplier</th>
                            <th scope="col">Company</th>
                            <th scope="col">Contact</th>
                            <th scope="col">Email</th>
                            <th scope="col">Phone</th>
                            <th scope="col" class="text-center">Status</th>
                            <th scope="col" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var supplier in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@supplier.Name</strong>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(supplier.CompanyName))
                                    {
                                        @supplier.CompanyName
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(supplier.ContactName))
                                    {
                                        @supplier.ContactName
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(supplier.Email))
                                    {
                                        <a href="mailto:@supplier.Email" class="text-decoration-none">
                                            <i class="bi bi-envelope me-1"></i>@supplier.Email
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No email</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(supplier.Phone))
                                    {
                                        <a href="tel:@supplier.Phone" class="text-decoration-none">
                                            <i class="bi bi-telephone me-1"></i>@supplier.Phone
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No phone</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (supplier.IsActive)
                                    {
                                        <span class="badge bg-success px-3 py-2">
                                            <i class="bi bi-check-circle me-1"></i> Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary px-3 py-2">
                                            <i class="bi bi-pause-circle me-1"></i> Inactive
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@supplier.SupplierId"
                                           class="btn btn-sm btn-outline-info" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@supplier.SupplierId"
                                           class="btn btn-sm btn-outline-warning" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@supplier.SupplierId"
                                           class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-truck fa-4x text-muted mb-3"></i>
                    <h5 class="text-muted">No suppliers found</h5>
                    <p class="text-muted">Get started by adding your first supplier.</p>
                    <a asp-action="Create" class="btn btn-primary shadow-sm">
                        <i class="bi bi-plus-circle me-1"></i> Add Supplier
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .table th {
        white-space: nowrap;
    }

    .badge {
        font-size: 0.9rem;
    }

    .btn-group .btn {
        margin-right: 4px;
    }

    .btn-outline-info:hover {
        background-color: #0dcaf0;
        color: white;
    }

    .btn-outline-warning:hover {
        background-color: #ffc107;
        color: black;
    }

    .btn-outline-danger:hover {
        background-color: #dc3545;
        color: white;
    }
</style>