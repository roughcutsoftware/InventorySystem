@model IEnumerable<InventorySystem.Core.DTOs.SupplierDto>

@{
    ViewData["Title"] = "Suppliers";
}

<h2>Suppliers</h2>

<p>
    <a asp-action="Add" class="btn btn-primary">Add New Supplier</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Contact Info</th>
            <th>Email</th>
            <th>Phone</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var supplier in Model)
        {
            <tr>
                <td>@supplier.Name</td>
                <td>@supplier.ContactName</td>
                <td>@supplier.Email</td>
                <td>@supplier.Phone</td>
                <td>
                    <a asp-action="Details" asp-route-id="@supplier.SupplierId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@supplier.SupplierId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@supplier.SupplierId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
