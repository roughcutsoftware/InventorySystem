@model IEnumerable<InventorySystem.Core.Entities.Sales>

@{
    ViewData["Title"] = "Sales Orders";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0 text-primary">
            <i class="bi bi-receipt-cutoff me-2"></i>Sales Orders
        </h2>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-circle me-1"></i> New Sale
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Date</th>
                        <th scope="col">Customer</th>
                        <th scope="col" class="text-end">Total</th>
                        <th scope="col" class="text-center">Status</th>
                        <th scope="col" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sale in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@sale.SaleId</td>
                            <td>@sale.SaleDate.ToString("yyyy-MM-dd")</td>
                            <td>@sale.Customer?.Name</td>
                            <td class="text-end">@sale.TotalAmount.ToString("C")</td>
                            <td class="text-center">
                                @switch (sale.Status?.ToLower())
                                {
                                    case "pending":
                                        <span class="badge bg-warning text-dark px-3 py-2">
                                            <i class="bi bi-hourglass-split me-1"></i> Pending
                                        </span>
                                        break;
                                    case "completed":
                                        <span class="badge bg-success px-3 py-2">
                                            <i class="bi bi-check-circle me-1"></i> Completed
                                        </span>
                                        break;
                                    case "cancelled":
                                        <span class="badge bg-danger px-3 py-2">
                                            <i class="bi bi-x-circle me-1"></i> Cancelled
                                        </span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary px-3 py-2">@sale.Status</span>
                                        break;
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@sale.SaleId"
                                       class="btn btn-sm btn-outline-info" title="View Details">
                                        <i class="bi bi-eye"></i>
                                    </a>

                                    @if (sale.Status?.ToLower() == "pending")
                                    {
                                        <form asp-action="Complete" asp-route-id="@sale.SaleId" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-success" title="Mark as Completed"
                                                    onclick="return confirm('Mark this sale as completed?');">
                                                <i class="bi bi-check2-circle"></i>
                                            </button>
                                        </form>

                                        <form asp-action="Cancel" asp-route-id="@sale.SaleId" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Cancel Sale"
                                                    onclick="return confirm('Cancel this sale?');">
                                                <i class="bi bi-x-circle"></i>
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .table th {
        white-space: nowrap;
    }
    .badge {
        font-size: 0.9rem;
    }
    .btn-group .btn {
        margin-right: 4px;
    }
    .btn-outline-info:hover {
        background-color: #0dcaf0;
        color: white;
    }
</style>
