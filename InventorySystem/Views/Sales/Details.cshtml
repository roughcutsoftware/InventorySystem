@model InventorySystem.Core.DTOs.SalesDto

@{
    ViewData["Title"] = "Sale Details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0 text-primary">
            <i class="bi bi-receipt-cutoff me-2"></i>Sale #@Model.SaleId Details
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back to List
        </a>
    </div>

    <!-- General Sale Info -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <p><strong>Customer:</strong> @Model.CustomerName</p>
                    <p>
                        <strong>Sale Date:</strong>
                        <i class="bi bi-calendar3 me-1 text-muted"></i>
                        @Model.SaleDate.ToString("yyyy-MM-dd")
                    </p>
                    <p>
                        <strong>Sale Time:</strong>
                        <i class="bi bi-clock me-1 text-muted"></i>
                        @Model.SaleDate.ToString("hh:mm tt")
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p>
                        <strong>Status:</strong>
                        @switch (Model.Status?.ToLower())
                        {
                            case "pending":
                                <span class="badge bg-warning text-dark px-3 py-2">
                                    <i class="bi bi-hourglass-split me-1"></i> Pending
                                </span>
                                break;
                            case "completed":
                                <span class="badge bg-success px-3 py-2">
                                    <i class="bi bi-check-circle me-1"></i> Completed
                                </span>
                                break;
                            case "cancelled":
                                <span class="badge bg-danger px-3 py-2">
                                    <i class="bi bi-x-circle me-1"></i> Cancelled
                                </span>
                                break;
                            default:
                                <span class="badge bg-secondary px-3 py-2">@Model.Status</span>
                                break;
                        }
                    </p>
                    <p class="fs-5">
                        <strong>Total Amount:</strong>
                        <span class="text-success">@Model.TotalAmount.ToString("C")</span>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Sale Items -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-light fw-semibold">
            <i class="bi bi-box-seam me-1"></i> Sale Items
        </div>
        <div class="card-body p-0">
            @if (Model.SaleDetails != null && Model.SaleDetails.Any())
            {
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Product</th>
                            <th class="text-center">Quantity</th>
                            <th class="text-end">Unit Price</th>
                            <th class="text-end">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.SaleDetails)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td class="text-center">@item.Quantity</td>
                                <td class="text-end">@item.UnitPrice.ToString("C")</td>
                                <td class="text-end">@item.Subtotal.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="p-3 text-muted text-center">
                    <i class="bi bi-info-circle me-1"></i> No products found for this sale.
                </div>
            }
        </div>
    </div>

    <!-- Actions -->
    @if (Model.Status?.ToLower() == "pending")
    {
        <div class="text-center">
            <form asp-action="Complete" asp-route-id="@Model.SaleId" method="post" class="d-inline">
                <button type="submit" class="btn btn-success px-4"
                        onclick="return confirm('Mark this sale as completed?');">
                    <i class="bi bi-check2-circle me-1"></i> Mark as Completed
                </button>
            </form>

            <form asp-action="Cancel" asp-route-id="@Model.SaleId" method="post" class="d-inline">
                <button type="submit" class="btn btn-danger px-4"
                        onclick="return confirm('Cancel this sale?');">
                    <i class="bi bi-x-circle me-1"></i> Cancel Sale
                </button>
            </form>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center mt-3">
            <i class="bi bi-info-circle me-1"></i> This sale has been <strong>@Model.Status</strong>.
        </div>
    }
</div>

<style>
    .card {
        border-radius: 12px;
    }

    .badge {
        font-size: 0.9rem;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }

    .fs-5 span.text-success {
        font-weight: 600;
    }
</style>
