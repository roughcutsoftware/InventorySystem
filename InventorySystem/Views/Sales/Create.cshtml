@model InventorySystem.Core.DTOs.SalesDto

@{
    ViewData["Title"] = "Create Sale";
}

<h2 class="mb-4">New Sales Order</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label for="CustomerId" class="form-label fw-bold">Customer</label>
        <select asp-for="CustomerId" asp-items="ViewBag.Customers" class="form-select">
            <option value="">-- Select Customer --</option>
        </select>
    </div>

    <table class="table table-bordered align-middle text-center" id="saleDetailsTable">
        <thead class="table-light">
            <tr>
                <th>Product</th>
                <th>Unit Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <select name="SaleDetails[0].ProductId" class="form-select product-select">
                        <option value="">-- Select Product --</option>
                        @foreach (var product in ViewBag.Products)
                        {
                            <option value="@product.ProductId" data-price="@product.UnitPrice">@product.Name</option>
                        }
                    </select>
                </td>
                <td>
                    <input type="text" class="form-control unit-price" readonly />
                </td>
                <td>
                    <input type="number" name="SaleDetails[0].Quantity" class="form-control quantity" min="1" />
                </td>
                <td>
                    <input type="text" class="form-control subtotal" readonly />
                </td>
                <td>
                    <button type="button" class="btn btn-danger btn-sm remove-row">×</button>
                </td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-center mt-3">
        <button type="button" id="addRowBtn" class="btn btn-secondary">+ Add Product</button>
        <div class="fw-bold fs-5">
            Total: <span id="grandTotal">0.00</span>
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Create Sale</button>
        <a asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
    </div>
</form>

@section Scripts {
    <script>
        let rowIndex = 1;

        // Add product row
        $('#addRowBtn').click(function () {
            const firstRow = $('#saleDetailsTable tbody tr:first');
            const newRow = firstRow.clone();

            newRow.find('select').attr('name', `SaleDetails[${rowIndex}].ProductId`).val('');
            newRow.find('.unit-price').val('');
            newRow.find('.quantity').attr('name', `SaleDetails[${rowIndex}].Quantity`).val('');
            newRow.find('.subtotal').val('');

            $('#saleDetailsTable tbody').append(newRow);
            rowIndex++;
        });

        // Remove row
        $(document).on('click', '.remove-row', function () {
            if ($('#saleDetailsTable tbody tr').length > 1) {
                $(this).closest('tr').remove();
                updateGrandTotal();
            }
        });

        // When selecting a product, show its price
        $(document).on('change', '.product-select', function () {
            const price = parseFloat($(this).find('option:selected').attr('data-price')) || 0;
            const row = $(this).closest('tr');
            row.find('.unit-price').val(price.toFixed(2));
            updateRowSubtotal(row);
        });

        // When quantity changes, recalc subtotal
        $(document).on('input', '.quantity', function () {
            const row = $(this).closest('tr');
            updateRowSubtotal(row);
        });

        function updateRowSubtotal(row) {
            const price = parseFloat(row.find('.unit-price').val()) || 0;
            const qty = parseInt(row.find('.quantity').val()) || 0;
            const subtotal = price * qty;
            row.find('.subtotal').val(subtotal.toFixed(2));
            updateGrandTotal();
        }

        function updateGrandTotal() {
            let total = 0;
            $('.subtotal').each(function () {
                total += parseFloat($(this).val()) || 0;
            });
            $('#grandTotal').text(total.toFixed(2));
        }
    </script>
}
