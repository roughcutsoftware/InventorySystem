@model InventorySystem.Core.DTOs.CustomerDto

@{
    ViewData["Title"] = "Customer Details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0 text-primary">
            <i class="bi bi-info-circle me-2"></i>Customer Details
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary shadow-sm">
            <i class="bi bi-arrow-left me-1"></i> Back to List
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">
                <i class="bi bi-person me-2"></i>Customer Information
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-semibold">Customer ID</label>
                    <p class="form-control-plaintext border-bottom pb-2">@Model.CustomerId</p>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label fw-semibold">Customer Name</label>
                    <p class="form-control-plaintext border-bottom pb-2">@Model.Name</p>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label fw-semibold">Email Address</label>
                    <p class="form-control-plaintext border-bottom pb-2">
                        @if (!string.IsNullOrEmpty(Model.Email))
                        {
                            <a href="mailto:@Model.Email" class="text-decoration-none">
                                <i class="bi bi-envelope me-1"></i>@Model.Email
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">No email provided</span>
                        }
                    </p>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label fw-semibold">Phone Number</label>
                    <p class="form-control-plaintext border-bottom pb-2">
                        @if (!string.IsNullOrEmpty(Model.Phone))
                        {
                            <a href="tel:@Model.Phone" class="text-decoration-none">
                                <i class="bi bi-telephone me-1"></i>@Model.Phone
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">No phone provided</span>
                        }
                    </p>
                </div>

                <div class="col-12 mb-3">
                    <label class="form-label fw-semibold">Address</label>
                    <p class="form-control-plaintext border-bottom pb-2">
                        @if (!string.IsNullOrEmpty(Model.Address))
                        {
                            <i class="bi bi-geo-alt me-1"></i>
                            @Model.Address
                        }
                        else
                        {
                            <span class="text-muted">No address provided</span>
                        }
                    </p>
                </div>
            </div>

            <div class="d-flex justify-content-end mt-4">
                <div class="btn-group" role="group">
                    <a asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-warning shadow-sm">
                        <i class="bi bi-pencil me-1"></i>Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.CustomerId" class="btn btn-danger shadow-sm">
                        <i class="bi bi-trash me-1"></i>Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>