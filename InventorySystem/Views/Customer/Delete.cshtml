@model InventorySystem.Core.DTOs.CustomerDto

@{
    ViewData["Title"] = "Delete Customer";
}

<h2 class="text-danger mb-4">Delete Customer</h2>

<div class="alert alert-warning">
    <h5>Are you sure you want to delete this customer?</h5>
    <p>This action cannot be undone.</p>
</div>

<div class="card shadow-sm p-4 mb-3">
    <dl class="row">
        <dt class="col-sm-3">ID</dt>
        <dd class="col-sm-9">@Model.CustomerId</dd>

        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Phone </dt>
        <dd class="col-sm-9">@Model.Phone</dd>

        <dt class="col-sm-3">Address</dt>
        <dd class="col-sm-9">@Model.Address</dd>
    </dl>
</div>

<form asp-action="DeleteCustomer" method="post">
    <input type="hidden" asp-for="CustomerId" />
    <div class="text-end">
        <button type="submit" class="btn btn-danger px-4 me-2">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
