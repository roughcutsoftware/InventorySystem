@model IEnumerable<InventorySystem.Core.DTOs.CustomerDto>

@{
    ViewData["Title"] = "Customers";
}

<h2 class="mb-3">Customer List</h2>

<p>
    <a asp-action="Add" class="btn btn-primary">Add New Customer</a>
</p>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark">
        <tr>
            <th>Customer ID</th>
            <th>Customer Name</th>
            <th>Customer Details</th>
            <th>Edit Customer</th>
            <th>Delete Customer</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.CustomerId</td>
                    <td>@item.Name</td>
                    <td class="text-center">
                        <a asp-action="Details" asp-route-id="@item.CustomerId" class="btn btn-sm btn-info me-3">Details</a>
                    </td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.CustomerId" class="btn btn-sm btn-warning me-3">Edit</a>
                    </td>
                    <td class="text-center">
                        <a asp-action="Delete" asp-route-id="@item.CustomerId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="10" class="text-center text-muted">No customers found.</td>
            </tr>
        }
    </tbody>
</table>

